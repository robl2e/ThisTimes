<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    tools:layout_width="200dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/article_view_max_height"
    android:layout_margin="@dimen/card_margin_border"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_article_headline"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingLeft="@dimen/margin_left_border_padding"
            android:paddingRight="@dimen/margin_right_border_padding"
            tools:text="Highlights From the 2017 Emmy Awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_article_publish_date"
            android:layout_marginTop="8dp"
            android:layout_below="@id/text_article_headline"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="@dimen/margin_left_border_padding"
            tools:text="Jun 12, 2017"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_news_desk_type"
            android:visibility="gone"
            tools:visibility="visible"
            android:fontFamily="sans-serif"
            tools:text="Fashion And Style"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="3dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/margin_left_border_padding"
            android:layout_marginRight="@dimen/margin_right_border_padding"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@drawable/selector_news_desk_type"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:layout_below="@id/text_article_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_article_summary"
            android:layout_margin="@dimen/body_text_margin_padding"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@id/text_news_desk_type"
            tools:text="What would college be without its crazy customs? We invite you to share photos of yours."
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>