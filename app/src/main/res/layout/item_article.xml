<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="200dp">


    <android.support.percent.PercentRelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_heightPercent="50%"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_article_thumbnail"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="100%"
            />

        <TextView
            android:id="@+id/text_article_headline"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_toRightOf="@id/image_article_thumbnail"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Share Your Collegeâ€™s Traditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:id="@+id/text_article_summary"
        style="@style/TextAppearance.AppCompat.Body1"
        tools:text="What would college be without its crazy customs? We invite you to share photos of yours."
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>